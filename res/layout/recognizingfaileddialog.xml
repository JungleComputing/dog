<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/top" android:orientation="horizontal"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:gravity="center_vertical">
	<ImageView android:id="@+id/thumb"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_weight="0"
		android:maxHeight="50px" android:maxWidth="100px"
		android:padding="5px" android:adjustViewBounds="true"
		android:scaleType="fitCenter">
	</ImageView>
	<TextView android:id="@+id/text" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:padding="5px"
		android:layout_weight="1" android:text="@string/recognition_failed">

	</TextView>
	<ImageButton android:id="@+id/closeButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:padding="5px"
		android:layout_weight="0" android:src="@drawable/close">
	</ImageButton>
</LinearLayout>
