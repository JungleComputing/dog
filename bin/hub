#!/bin/sh

CP=lib-server:lib-server/*

NORMAL=
SPECIAL=

while [ $# -gt 0 ]
do

        HEADER=`echo $1 | head --bytes=2`

        case "$HEADER" in
        -D)
                SPECIAL="$SPECIAL $1"
                ;;
        *)
                NORMAL="$NORMAL $1"
                ;;
        esac
        shift
done

java -cp $CP -Dlog4j.configuration=file:`pwd`/log4j.properties $SPECIAL ibis.ipl.server.Server $NORMAL
