#!/bin/sh

CP=.

for i in external/video4J/*.jar
do
    CP=$CP:$i
done

for i in external/jfreechart/*.jar
do
    CP=$CP:$i
done

for i in external/deploy/*.jar
do
    CP=$CP:$i
done

for i in external/ipl/*.jar
do
    CP=$CP:$i
done

for i in external/freetts/*.jar
do
    CP=$CP:$i
done

for i in jars/*.jar
do
    CP=$CP:$i
done

NORMAL=
SPECIAL=

while [ $# -gt 0 ]
do

        HEADER=`echo $1 | head --bytes=2`

        case "$HEADER" in
        -D)
                SPECIAL="$SPECIAL $1"
                ;;
        *)
                NORMAL="$NORMAL $1"
                ;;
        esac
        shift
done

java -Xms128M -Xmx768M -cp $CP -Djava.library.path=`pwd`/external/native_libraries -Dgat.adaptor.path=./external/deploy/adaptors $SPECIAL ibis.dog.client.gui.GUI $NORMAL



